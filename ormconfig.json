{
  "type": "postgres",
  "host": "${DB_HOST}",
  "port": "${DB_PORT}",
  "username": "${DB_USER}",
  "password": "${DB_PASS}",
  "database": "${DB_NAME}",
  "entities": [
    "src/database/models/*.ts"
  ],
  "migrations": [
    "src/database/migrations/*.ts"
  ],
  "cli": {
    "entitiesDir": "src/database/models",
    "migrationsDir": "src/database/migrations"
  }
}
